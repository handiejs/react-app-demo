{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "importHelpers": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      // "petals-ui/dist/*": ["external/petals/packages/petals/src/*"],
      "@zora/core/dist/*": ["external/zora-core/src/*"],
      "@zora/adapter-ant-design": ["external/zora-antd/src/index.ts"],
      "@zora/adapter-ant-design/dist/*": ["external/zora-antd/src/*"],
      "handie-react": ["external/handie-react/src/index.ts"],
      "handie-react/dist/*": ["external/handie-react/src/*"],
      "@handie/squirtle": ["external/squirtle/src/index.ts"],
      "@handie/squirtle/dist/*": ["external/squirtle/src/*"]
    }
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    ".umirc.ts",
    "typings.d.ts",
    "external"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
